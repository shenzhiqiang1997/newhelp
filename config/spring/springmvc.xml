		<mvc:interceptor>
			<mvc:mapping path="/api/*"/>
			<mvc:exclude-mapping path="/api/login"/>
			<bean class="com.uestc.newhelp.interceptor.AuthorizationInterceptor"></bean>
		</mvc:interceptor>
	</mvc:interceptors> -->
</beans>
